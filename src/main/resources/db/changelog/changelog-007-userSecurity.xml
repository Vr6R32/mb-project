<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd">

    <!-- ChangeSet 1: Create the app_user table -->
    <changeSet id="1" author="michal-k">
        <createTable tableName="app_user">
            <column name="id" type="bigserial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="email" type="varchar(255)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="user_name" type="varchar(255)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="password" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="account_enabled" type="boolean"/>
            <column name="account_not_expired" type="boolean"/>
            <column name="account_not_locked" type="boolean"/>
            <column name="credentials_not_expired" type="boolean"/>
        </createTable>
    </changeSet>

    <!-- ChangeSet 2: Create the roles table -->
    <changeSet id="2" author="michal-k">
        <createTable tableName="roles">
            <column name="id" type="bigserial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints unique="true" nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- ChangeSet 3: Create the user_role_mapping table -->
    <changeSet id="3" author="michal-k">
        <createTable tableName="user_role_mapping">
            <column name="role_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- ChangeSet 4: Add Foreign Key Constraints -->
    <changeSet id="4" author="michal-k">
        <addForeignKeyConstraint baseTableName="user_role_mapping" baseColumnNames="role_id"
                                 referencedTableName="roles" referencedColumnNames="id"
                                 constraintName="fk_role_id"/>
        <addForeignKeyConstraint baseTableName="user_role_mapping" baseColumnNames="user_id"
                                 referencedTableName="app_user" referencedColumnNames="id"
                                 constraintName="fk_user_id"/>
    </changeSet>

