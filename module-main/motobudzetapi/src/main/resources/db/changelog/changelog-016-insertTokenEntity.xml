<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">


    <changeSet id="create-token-table-001" author="yourname">

        <createTable tableName="tokens">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="token" type="varchar(255)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="token_type" type="varchar(255)" defaultValue="BEARER">
                <constraints nullable="false"/>
            </column>
            <column name="revoked" type="boolean" defaultValue="false">
                <constraints nullable="false"/>
            </column>
            <column name="expired" type="boolean" defaultValue="false">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>



</databaseChangeLog>
