<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd">


    <changeSet id="1" author="michal-k">
        <addColumn tableName="advertisement">
            <column name="user_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_app_user_advertisement"
                             references="app_user(id)"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="2" author="michal-k">
        <createTable tableName="app_user_advertisements">
            <column name="user_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fkg8w9s05di8rj3ddslwi1l9fo6" references="app_user(id)"/>
            </column>
            <column name="advertisement_id" type="uuid">
                <constraints unique="true" foreignKeyName="fk6mci1ovu52iv36yngs0uk4bjq" references="advertisement(id)"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="3" author="michal-k">
        <addForeignKeyConstraint baseTableName="app_user_advertisements"
                                 baseColumnNames="user_id"
                                 constraintName="fkkltlfue942q2vibyevrsrjb9b"
                                 referencedTableName="app_user"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>
