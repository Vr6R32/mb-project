<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd">

    <changeSet id="createTableConversations" author="michal-k">
        <createTable tableName="conversations">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" unique="true"/>
            </column>
            <column name="user_client_id" type="BIGINT">
                <constraints foreignKeyName="fkp6cukk0ykby4samela9nlespb" references="app_user(id)"/>
            </column>
            <column name="user_owner_id" type="BIGINT">
                <constraints foreignKeyName="fki1pyanwhko4xbpiiql12m4rxg" references="app_user(id)"/>
            </column>
            <column name="advertisement_id" type="UUID">
                <constraints foreignKeyName="fktn5mhp1euuy76ay51fbtnfcmj" references="advertisement(id)"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="createTableConversationMessages" author="michal-k">
        <createTable tableName="conversation_messages">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true"/>
            </column>
            <column name="conversation_id" type="BIGINT">
                <constraints foreignKeyName="fkcr8qqgnqnaqq2hw3gr4wtfe2a" references="conversations(id)"/>
            </column>
            <column name="message_sender_id" type="BIGINT">
                <constraints foreignKeyName="fkd1a4uths63jnx5ntey3y64wxb" references="app_user(id)"/>
            </column>
            <column name="message" type="VARCHAR(255)"/>
            <column name="message_send_date_time" type="timestamp(6)"/>
            <column name="message_read_date_time" type="timestamp(6)"/>
        </createTable>
    </changeSet>

    <changeSet id="addColumnToConversations" author="michal-k">
        <addColumn tableName="conversations">
            <column name="last_message_id" type="BIGINT">
                <constraints unique="true" foreignKeyName="conversations_last_message_fk" references="conversation_messages(id)"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>
